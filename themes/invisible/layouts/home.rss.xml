{{- $pages := where site.RegularPages "Section" "in" (slice "posts" "links") }}
{{- $title := .Site.Title }}
{{- if ne .Title .Site.Title }}
  {{- $title = printf "%s on %s" .Title .Site.Title }}
{{- end }}
{{- $description := printf "Recent content on %s" .Site.Title }}
{{- if ne .Title .Site.Title }}
  {{- $description = printf "Recent content in %s on %s" .Title .Site.Title }}
{{- end }}
{{- partial "rss-feed.xml" (dict "pages" $pages "title" $title "description" $description "outputFormat" "RSS" "context" .) }}
